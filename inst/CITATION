
# CITATION file

citHeader("To cite package 'ChemoSpec' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
web <- "github.com/bryanhanson/ChemoSpec"

citEntry(entry = "Manual",
	title = "ChemoSpec: Exploratory Chemometrics for Spectroscopy",
	author = personList(as.person("Bryan A. Hanson")),
	year = year,
	note = vers,
	web = web,
	textVersion = paste("Bryan A. Hanson (", year, ") ChemoSpec: Exploratory Chemometrics for Spectroscopy. ",
		vers, ", ", web, sep = ""))
